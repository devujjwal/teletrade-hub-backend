{
    "name": "teletrade-hub/backend",
    "description": "TeleTrade Hub Backend API - Production-grade e-commerce platform",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "TeleTrade Hub Development Team",
            "email": "dev@teletrade-hub.com"
        }
    ],
    "keywords": ["ecommerce", "api", "backend", "rest-api", "php"],
    "homepage": "https://github.com/devujjwal/teletrade-hub-backend",
    "require": {
        "php": ">=8.3",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Config/env.php",
            "app/Utils/Response.php",
            "app/Utils/Validator.php",
            "app/Utils/Sanitizer.php",
            "app/Utils/SecurityLogger.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite 'Unit Tests'",
        "test:integration": "phpunit --testsuite 'Integration Tests'",
        "test:e2e": "phpunit --testsuite 'E2E Tests'",
        "test:coverage": "phpunit --coverage-html tests/coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

